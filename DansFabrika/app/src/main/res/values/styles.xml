<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
       <!-- <item name="android:actionBarTabStyle">@style/MyActionBarTabstyle</item>-->
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextStyle</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
        <item name="android:background">#000000</item>
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:icon">@drawable/ic_launcher</item>

    </style>

    <style name="MyActionBarTabstyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">#ffededed</item>
    </style>
    <style name="MyActionBarTabTextStyle" parent="@android:TextAppearance.Holo">
        <item name="android:textColor">#ff6e6e6e</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TitleBarTextColor" parent="@android:TextAppearance.Holo">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="viewGeneralListLine">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="viewGeneralDetailLine">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="textGeneralDetailTitle" parent="@android:style/Widget.TextView">
         <item name="android:textSize">20sp</item>
         <item name="android:typeface">sans</item>
         <item name="android:textStyle">bold</item>
         <item name="android:textColor">#343434</item>
         <item name="android:layout_margin">10dp</item>
    </style>
    <style name="textGeneralDetailDescription" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#343434</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="textGeneralListTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#343434</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="textGeneralListDescription" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#343434</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="btnGeneralMain" parent="@android:style/Widget.Button">
       <!-- <item name="android:background">@drawable/button2</item>-->
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#343434</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/layout_selector</item>
    </style>

    <style name="layoutContact">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/layout_selector</item>
    </style>

    <style name="imgbtnHome" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@color/transparentColor</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="imgbtnContact" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@color/transparentColor</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="textGeneralListTitle2" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@color/lightTextColorBackGround</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="textGeneralDetailTitle2" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@color/lightTextColorBackGround</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="backgroundMainStyle">
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="backgroundInnerStyle">
        <item name="android:background">@drawable/background2</item>
    </style>
</resources>
