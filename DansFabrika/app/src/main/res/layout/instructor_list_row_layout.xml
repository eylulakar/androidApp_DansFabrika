<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/roundcorner2"
    android:layout_margin="20dp"
    >

    <com.eylulakar.dansfabrika.SquareImageView
        android:id="@+id/imgInstructorListImage"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_margin="2dp"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        />
<TableLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2.5"
    >
    <TextView
        android:id="@+id/txtInstructorListFirstName"
        android:layout_gravity="top"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:text="sample text"
        android:layout_margin="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/viewGeneralListLine"
        />
    <TextView
        android:id="@+id/txtInstructorListBranch"
        android:layout_gravity="top"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="sans"
        android:text="sample text"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_margin="5dp" />

</TableLayout>

</LinearLayout>