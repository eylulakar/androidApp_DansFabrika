<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/backgroundInnerStyle">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/roundcorner2"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgStudioVideoDetailImage"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleX="1"
            android:onClick="onimgStudioVideoDetailImageClick"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/txtStudioVideoDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textGeneralDetailTitle"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/viewGeneralDetailLine"/>

        <TextView
            android:id="@+id/txtStudioVideoDetailOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDancerDetailTitle"
            style="@style/textGeneralDetailDescription"/>


    </LinearLayout>


</ScrollView>