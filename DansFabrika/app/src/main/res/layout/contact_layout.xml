<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    style="@style/backgroundInnerStyle"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llContactCall"
        style="@style/layoutContact">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/roundbuttonshadowedbg"
                    android:layout_centerHorizontal="true"
                    style="@style/btnGeneralMain">
                    <ImageButton
                        android:id="@+id/btnContactCall"
                        android:onClick="onbtnContactCallClick"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_green"
                        style="@style/imgbtnContact"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="0dp"
                        />
                </RelativeLayout>


        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >
            <TextView
                android:layout_gravity="top"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:text="Telefon Numaramız"
                android:layout_margin="5dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/viewGeneralListLine"
                />
            <TextView
                android:layout_gravity="top"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:typeface="sans"
                android:text="0090 536 944 65 20"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_margin="5dp" />

        </TableLayout>

    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llContactMap"
            style="@style/layoutContact">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshadowedbg"
                android:layout_centerVertical="true"
                style="@style/btnGeneralMain">

            <ImageButton
                    android:id="@+id/btnContactMap"
                    android:onClick="onbtnContactMapClick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_map_red"
                    style="@style/imgbtnContact"
                    />
            </RelativeLayout>



            <TableLayout
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="Neredeyiz"
                    android:layout_margin="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/viewGeneralListLine"
                    />
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:text="Menderes Caddesi, Huzur Mh. No:9 (Eski oto sanayi) 4.Levent İstanbul, Türkiye"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_margin="5dp" />

            </TableLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llContactMail"
            style="@style/layoutContact">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshadowedbg"
                android:layout_centerHorizontal="true"
                style="@style/btnGeneralMain">

            <ImageButton
                    android:id="@+id/btnContactMail"
                    android:onClick="onbtnContactMailClick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_sendemail"
                    style="@style/imgbtnContact"
                    />
            </RelativeLayout>

            <TableLayout
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="Eposta Adresimiz"
                    android:layout_margin="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/viewGeneralListLine"
                    />
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:text="dansfabrika@gmail.com"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_margin="5dp" />

            </TableLayout>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llContactWebsite"
            style="@style/layoutContact">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshadowedbg"
                android:layout_centerHorizontal="true"
                style="@style/btnGeneralMain">

            <ImageButton
                    android:id="@+id/btnContactWebsite"
                    android:onClick="onbtnContactWebsiteClick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_web"
                    style="@style/imgbtnContact"
                    />
            </RelativeLayout>


            <TableLayout
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="Web Sitemiz"
                    android:layout_margin="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/viewGeneralListLine"
                    />
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:text="www.dansfabrika.com"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_margin="5dp" />

            </TableLayout>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llContactSendForm"
            style="@style/layoutContact">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshadowedbg"
                android:layout_centerHorizontal="true"
                style="@style/btnGeneralMain">

            <ImageButton
                    android:id="@+id/btnContactSendForm"
                    android:onClick="onbtnContactSendFormClick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_sendform"
                    style="@style/imgbtnContact"
                    />
            </RelativeLayout>

            <TableLayout
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="İletişim Formu"
                    android:layout_margin="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/viewGeneralListLine"
                    />
                <TextView
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:text="İletişim formumuzu kullanarak bize mesaj yollayın."
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_margin="5dp" />
            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>