<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/backgroundInnerStyle"
    >
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/roundcorner2">

            <TextView
                android:id="@+id/txtProductPageDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="20dp">


            <RelativeLayout
                android:id="@+id/rlProductListCall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                style="@style/btnGeneralMain">

                <ImageButton
                    android:id="@+id/btnProductDescriptionCall"
                    android:onClick="onbtnProductDescriptionCallClick"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/home_button_imgbtn_height"
                    android:src="@drawable/ic_call_green"
                    style="@style/imgbtnHome"
                    />

            </RelativeLayout>


        </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <GridView
        android:id="@+id/gvProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:verticalSpacing="10.0sp"
        android:horizontalSpacing="10.0sp"
        android:listSelector="@android:color/darker_gray"
        android:stretchMode="columnWidth"
        android:numColumns="2"

        />


</LinearLayout>