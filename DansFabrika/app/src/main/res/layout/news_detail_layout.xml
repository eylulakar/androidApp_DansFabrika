<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollNewsDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/backgroundInnerStyle"
  >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/roundcorner2"
        android:layout_margin="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgNewsDetailImage"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:scaleX="1"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/txtNewsDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textGeneralDetailTitle"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
           style="@style/viewGeneralDetailLine"/>
        <TextView
            android:id="@+id/txtNewsDetailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNewsDetailTitle"
            style="@style/textGeneralDetailDescription"/>
    </LinearLayout>


</ScrollView>